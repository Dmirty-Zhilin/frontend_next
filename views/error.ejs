<div class="error-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title"><%= typeof title !== 'undefined' ? title : 'Ошибка' %></h1>
        </div>
        <div class="card-body">
            <div class="error-message">
                <p><%= typeof message !== 'undefined' ? message : 'Произошла ошибка при обработке запроса.' %></p>
                
                <% if (typeof error !== 'undefined' && process.env.NODE_ENV !== 'production') { %>
                    <div class="error-details">
                        <h3>Детали ошибки:</h3>
                        <pre><%= JSON.stringify(error, null, 2) %></pre>
                    </div>
                <% } %>
            </div>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary">Вернуться на главную</a>
                <button onclick="window.history.back()" class="btn btn-secondary">Назад</button>
            </div>
        </div>
    </div>
</div>
