<div class="reports-container">
    <h1 class="mt-4 mb-4">Отчеты</h1>
    
    <div class="reports-tabs">
        <div class="tab-header">
            <button class="tab-btn active" data-tab="all">Все отчеты</button>
            <button class="tab-btn" data-tab="domains">Отчеты по доменам</button>
            <button class="tab-btn" data-tab="batches">Пакетные отчеты</button>
        </div>
        
        <div class="tab-content active" id="all-tab">
            <div class="reports-filters">
                <div class="filter-group">
                    <label for="date-filter">Фильтр по дате:</label>
                    <select id="date-filter" name="dateFilter">
                        <option value="all">Все время</option>
                        <option value="today">Сегодня</option>
                        <option value="week" selected>Последняя неделя</option>
                        <option value="month">Последний месяц</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="type-filter">Тип отчета:</label>
                    <select id="type-filter" name="typeFilter">
                        <option value="all" selected>Все типы</option>
                        <option value="domain">Домены</option>
                        <option value="batch">Пакетные</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="search-reports">Поиск:</label>
                    <input type="text" id="search-reports" placeholder="Поиск по названию...">
                </div>
            </div>
            
            <div class="reports-list">
                <div class="report-item">
                    <div class="report-icon batch-icon"></div>
                    <div class="report-details">
                        <h3>Анализ дропов от 20.05.2025</h3>
                        <div class="report-meta">
                            <span class="report-date">20.05.2025 14:30</span>
                            <span class="report-type">Пакетный</span>
                            <span class="report-count">1000 доменов</span>
                        </div>
                        <div class="report-stats">
                            <div class="stat">
                                <span class="stat-label">Рекомендовано:</span>
                                <span class="stat-value">342</span>
                            </div>
                            <div class="stat">
                                <span class="stat-label">Средний балл:</span>
                                <span class="stat-value">76/100</span>
                            </div>
                        </div>
                    </div>
                    <div class="report-actions">
                        <a href="/reports/report-001" class="btn btn-primary">Просмотр</a>
                        <button class="btn btn-outline btn-sm">Экспорт</button>
                    </div>
                </div>
                
                <div class="report-item">
                    <div class="report-icon domain-icon"></div>
                    <div class="report-details">
                        <h3>example.com</h3>
                        <div class="report-meta">
                            <span class="report-date">21.05.2025 09:15</span>
                            <span class="report-type">Домен</span>
                        </div>
                        <div class="report-stats">
                            <div class="stat">
                                <span class="stat-label">Оценка:</span>
                                <span class="stat-value">85/100</span>
                            </div>
                            <div class="stat">
                                <span class="stat-label">Рекомендация:</span>
                                <span class="stat-value recommendation-positive">Рекомендован</span>
                            </div>
                        </div>
                    </div>
                    <div class="report-actions">
                        <a href="/reports/domain/example.com" class="btn btn-primary">Просмотр</a>
                        <button class="btn btn-outline btn-sm">Экспорт</button>
                    </div>
                </div>
                
                <div class="report-item">
                    <div class="report-icon batch-icon"></div>
                    <div class="report-details">
                        <h3>Долгоживущие домены</h3>
                        <div class="report-meta">
                            <span class="report-date">18.05.2025 10:15</span>
                            <span class="report-type">Пакетный</span>
                            <span class="report-count">500 доменов</span>
                        </div>
                        <div class="report-stats">
                            <div class="stat">
                                <span class="stat-label">Рекомендовано:</span>
                                <span class="stat-value">125</span>
                            </div>
                            <div class="stat">
                                <span class="stat-label">Средний балл:</span>
                                <span class="stat-value">68/100</span>
                            </div>
                        </div>
                    </div>
                    <div class="report-actions">
                        <a href="/reports/report-002" class="btn btn-primary">Просмотр</a>
                        <button class="btn btn-outline btn-sm">Экспорт</button>
                    </div>
                </div>
                
                <div class="report-item">
                    <div class="report-icon domain-icon"></div>
                    <div class="report-details">
                        <h3>sample-domain.org</h3>
                        <div class="report-meta">
                            <span class="report-date">20.05.2025 11:30</span>
                            <span class="report-type">Домен</span>
                        </div>
                        <div class="report-stats">
                            <div class="stat">
                                <span class="stat-label">Оценка:</span>
                                <span class="stat-value">72/100</span>
                            </div>
                            <div class="stat">
                                <span class="stat-label">Рекомендация:</span>
                                <span class="stat-value recommendation-positive">Рекомендован</span>
                            </div>
                        </div>
                    </div>
                    <div class="report-actions">
                        <a href="/reports/domain/sample-domain.org" class="btn btn-primary">Просмотр</a>
                        <button class="btn btn-outline btn-sm">Экспорт</button>
                    </div>
                </div>
            </div>
            
            <div class="pagination">
                <button class="pagination-btn" disabled>&laquo;</button>
                <button class="pagination-btn active">1</button>
                <button class="pagination-btn">2</button>
                <button class="pagination-btn">3</button>
                <button class="pagination-btn">&raquo;</button>
            </div>
        </div>
        
        <!-- Остальные вкладки будут иметь аналогичную структуру -->
        <div class="tab-content" id="domains-tab">
            <!-- Содержимое вкладки с отчетами по доменам -->
        </div>
        
        <div class="tab-content" id="batches-tab">
            <!-- Содержимое вкладки с пакетными отчетами -->
        </div>
    </div>
</div>

<% const extraScripts = ['/js/components/reports.js']; %>
